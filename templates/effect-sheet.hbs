<div class="effectmacro">
  <label class="title">Effect Macro</label>
  {{#each usedOptions as |option|}}
  <div class="form-group used-option">
    <label></label>
    <div class="form-fields">
      <span>{{localize option.label}}</span>
      <a data-action="macro-edit" data-key="{{option.key}}"><i class="fa-solid fa-edit"></i></a>
      <a data-action="macro-delete" data-key="{{option.key}}"><i class="fa-solid fa-trash"></i></a>
    </div>
  </div>
  {{/each}}
  {{#if remainingOptions.length}}
  <div class="form-group">
    <label>{{localize "EFFECTMACRO.APPLYMACRO.NEW_TRIGGER"}}</label>
    <div class="form-fields">
      <select class="unused-option">
        {{{remainingOptions}}}
      </select>
      <button type="button" data-action="macro-add">
        <i class="fa-solid fa-plus"></i> {{localize "EFFECTMACRO.APPLYMACRO.ADD_THIS"}}
      </button>
    </div>
  </div>
  {{/if}}
</div>
